# Single-expression body.
var c = 0
while c < 3 { println(c = c + 1); }
# expect: 1
# expect: 2
# expect: 3

# Parenthesized condition.
var a = 0
while (a < 3) {
  println(a)
  a = a + 1
}
# expect: 0
# expect: 1
# expect: 2

# Statement bodies.
while false { fn test {} }
while false { while true { 1; } }
